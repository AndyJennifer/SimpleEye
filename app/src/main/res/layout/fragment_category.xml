<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.jennifer.andy.simpleeyes.widget.MultipleStateView
        android:id="@+id/multiple_state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.jennifer.andy.simpleeyes.widget.pull.PullToZoomRecyclerView
            android:id="@+id/rv_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:headView="@layout/layout_category_head_view"
            app:zoomView="@layout/layout_category_zoom_view"
        />

    </com.jennifer.andy.simpleeyes.widget.MultipleStateView>

</LinearLayout>